<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:textSize="54sp"
        android:textColor="@color/white"
        android:text="@string/_0"
        android:gravity="end|bottom"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAc"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_light_gray"
            android:padding="0dp"
            android:text="@string/clear"
            android:onClick="onClear"
            android:textColor="@color/black"
            android:textSize="40sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlusMinus"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/plus_minus"
            android:onClick="onPlusMinus"
            android:textSize="40sp"
            android:padding="0dp"
            android:background="@drawable/round_button_light_gray"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPercent"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/percent"
            android:onClick="onPercent"
            android:textSize="40sp"
            android:padding="0dp"
            android:background="@drawable/round_button_light_gray"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDivide"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/divide"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onOperation"
            android:background="@drawable/round_button_orange"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeven"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:padding="0dp"
            android:text="@string/_7"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEight"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/_8"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNine"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/_9"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMultiply"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/multiply"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onOperation"
            android:background="@drawable/round_button_orange"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFour"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:padding="0dp"
            android:text="@string/_4"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFive"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/_5"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSix"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/_6"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/minus"
            android:textSize="40sp"
            android:onClick="onOperation"
            android:padding="0dp"
            android:background="@drawable/round_button_orange"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOne"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:padding="0dp"
            android:text="@string/_1"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTwo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/_2"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnThree"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/_3"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDigit"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/plus"
            android:textSize="40sp"
            android:onClick="onOperation"
            android:padding="0dp"
            android:background="@drawable/round_button_orange"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnZero"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:onClick="onDigit"
            android:background="@drawable/button_gray"
            android:padding="0dp"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDot"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onDecimalPoint"
            android:background="@drawable/round_button_gray"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEqual"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:text="@string/equal"
            android:textSize="40sp"
            android:padding="0dp"
            android:onClick="onEqual"
            android:background="@drawable/round_button_orange"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>